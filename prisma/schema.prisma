generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  password     String
  role         Role          @default(USER)
  isVerified   Boolean       @default(false)
  isActive     Boolean       @default(true)
  createdAt    DateTime      @default(now())
  lastLogin    DateTime?
  name         String?
  avatar       String?
  bio          String?
  portfolio    String?       // URL vers le portfolio du créateur
  identityDocument String?   // URL vers la pièce d'identité stockée
  contents     Content[]
  transactions Transaction[]
}

model Content {
  id              String        @id @default(uuid())
  title           String
  type            ContentType
  price           Float?
  thumbnail       String
  description     String
  creatorId       String
  isApproved      Boolean       @default(false)
  rejectionReason String?
  genre           String?
  director        String?
  year            String?
  country         String?
  language        String?
  cast            String?
  isFeatured      Boolean       @default(false)
  isNew           Boolean       @default(true)
  featuredRank    Int?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  creator         User          @relation(fields: [creatorId], references: [id])
  film            Film?
  serie           Serie?
  transactions    Transaction[]
}

model Film {
  id        String  @id @default(uuid())
  duration  Int
  videoPath String
  contentId String  @unique
  content   Content @relation(fields: [contentId], references: [id])
}

model Serie {
  id        String   @id @default(uuid())
  contentId String   @unique
  seasons   Season[]
  content   Content  @relation(fields: [contentId], references: [id])
}

model Season {
  id       String    @id @default(uuid())
  number   Int
  serieId  String
  title    String?
  episodes Episode[]
  serie    Serie     @relation(fields: [serieId], references: [id])
}

model Episode {
  id          String  @id @default(uuid())
  title       String
  duration    Int
  videoPath   String
  seasonId    String
  number      Int?
  thumbnail   String?
  description String?
  season      Season  @relation(fields: [seasonId], references: [id])
}

model Transaction {
  id            String   @id @default(uuid())
  userId        String
  contentId     String
  amount        Float
  isPaid        Boolean  @default(true)
  createdAt     DateTime @default(now())
  paymentMethod String?
  content       Content  @relation(fields: [contentId], references: [id])
  user          User     @relation(fields: [userId], references: [id])
}

enum Role {
  USER
  CREATOR
  ADMIN
}

enum ContentType {
  FILM
  SERIE
}
